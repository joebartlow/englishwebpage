<div id="main">
  <h1><%= @content.title %></h1>
  <h2><%= @content.subtitle %></h2>
  <% if @content.page_type == "normal" %>
      <% @content.content_texts.each do |text| %>
          <p><%= text.body_text %></p>
      <% end %>
      <% @content.content_images.each do |image| %>
          <img src="<%= image.image_uri %>" />
      <% end %>
  <% else %>
      <% @content.content_videos.each do |video| %>
        <iframe width="560" height="315" src="<%= video.video_uri %>" frameborder="0" allowfullscreen></iframe>
      <% end %>
  <% end %>
</div>
<div id="nav">
  <% if @content.page_order > 0 %>
    <a href="/show_by_page_order/?page_order=<%= @content.page_order - 1 %>"><<</a>
  <% end %>
  <% @page_list.each do |page| %>
      <a href="/bases/<%= page[:page_id] %>"><%= page[:title] %></a>
  <% end %>
  <% if (@content.page_order + 1) <= @max %>
    <a href="/show_by_page_order/?page_order=<%= @content.page_order + 1 %>">>></a>
  <% end %>
</div>